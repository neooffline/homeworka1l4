<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="731dp"
        tools:layout_conversion_absoluteWidth="395dp"
        tools:layout_conversion_wrapHeight="406"
        tools:layout_conversion_wrapWidth="803"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">


        <CheckBox
            android:id="@+id/check_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_row="3"
            tools:layout_conversion_absoluteHeight="32dp"
            tools:layout_conversion_absoluteWidth="32dp"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="75dp" />

        <CheckBox
            android:id="@+id/check_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_row="1"
            tools:layout_conversion_absoluteHeight="32dp"
            tools:layout_conversion_absoluteWidth="32dp"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="21dp" />

        <TextView
            android:id="@+id/text_pres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_pres"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_column="2"
            app:layout_row="0"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="116dp"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weather_label"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="0"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="152dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <Spinner
            android:id="@+id/cities_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/cities"
            android:spinnerMode="dropdown"
            app:layout_column="0"
            app:layout_row="1"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_conversion_absoluteWidth="150dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="25dp" />

        <TextView
            android:id="@+id/text_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_temp"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_row="0"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="93dp"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/text_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_hum"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_row="2"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="100dp"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="53dp" />

        <CheckBox
            android:id="@+id/check_pres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:textAlignment="center"
            app:layout_column="2"
            app:layout_row="1"
            tools:layout_conversion_absoluteHeight="32dp"
            tools:layout_conversion_absoluteWidth="32dp"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="21dp" />

        <Button
            android:id="@+id/query_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToSecond"
            android:text="@string/query_data"
            app:layout_column="1"
            app:layout_row="4"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="88dp"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="107dp" />

    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>